{
  "name": "a2h-drawer",
  "version": "0.1.0",
  "description": "A universal React component library for PWA Add to Home Screen flows with iOS-native UI design",
  "private": false,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun test",
    "example:react": "cd examples/react && bun run dev"
  },
  "keywords": [
    "react",
    "pwa",
    "add-to-home-screen",
    "ios",
    "ui",
    "component",
    "shadcn",
    "typescript"
  ],
  "author": "posaune0423",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/posaune0423/a2h-drawer.git"
  },
  "bugs": {
    "url": "https://github.com/posaune0423/a2h-drawer/issues"
  },
  "homepage": "https://github.com/posaune0423/a2h-drawer#readme",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "tsup": "^8.3.5",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/vite": "^4.1.11",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.468.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "vaul": "^1.1.2"
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
