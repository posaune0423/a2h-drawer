{
  "name": "a2h-drawer",
  "version": "0.1.0",
  "description": "iOS PWA 'Add to Home Screen' instruction drawer for React",
  "author": "posaune0423",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/posaune0423/a2h-drawer.git"
  },
  "homepage": "https://github.com/posaune0423/a2h-drawer#readme",
  "bugs": {
    "url": "https://github.com/posaune0423/a2h-drawer/issues"
  },
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "type": "module",
  "sideEffects": [
    "**/*.css"
  ],
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./styles": "./src/styles/index.css"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "pwa",
    "ios",
    "add-to-home-screen",
    "a2hs",
    "react",
    "modal",
    "drawer",
    "install-prompt"
  ],
  "prettier": {
    "printWidth": 120,
    "arrowParens": "avoid",
    "experimentalTernaries": true,
    "plugins": [
      "prettier-plugin-organize-imports",
      "@prettier/plugin-oxc",
      "prettier-plugin-tailwindcss"
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --check . --experimental-cli",
    "format:fix": "prettier --write . --experimental-cli",
    "typecheck": "tsgo --noEmit",
    "test": "bun test --preload ./tests/setup.ts tests/",
    "test:watch": "bun test --watch --preload ./tests/setup.ts tests/",
    "test:all": "bun test --preload ./tests/setup.ts",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "example": "cd examples/react-vite && bun run dev",
    "example:install": "cd examples/react-vite && bun install",
    "example:test": "cd examples/react-vite && bun run test"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "typescript": "^5.9.3"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^20.3.1",
    "@posaune0423/eslint-config": "^1.2.2",
    "@prettier/plugin-oxc": "^0.1.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.1",
    "@types/bun": "latest",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "^7.0.0-dev.20260117.1",
    "happy-dom": "^20.3.1",
    "jiti": "^2.6.1",
    "prettier": "^3.8.0",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwindcss": "^4.1.18"
  }
}
